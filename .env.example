# Configuration de l'Agent IA

# Provider LLM (ollama, openai, claude, azure)
LLM_PROVIDER=ollama

# Configuration Ollama (LLM Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=phi3:mini

# Configuration OpenAI (ChatGPT)
# Décommenter si vous utilisez OpenAI
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4-turbo-preview
# OPENAI_BASE_URL=https://api.openai.com/v1 (optionnel)

# Configuration Claude (Anthropic)
# Décommenter si vous utilisez Claude
# CLAUDE_API_KEY=sk-ant-...
# CLAUDE_MODEL=claude-2.1
# Note: Utilise l'API Completions (ancienne génération)

# Configuration Azure OpenAI
# Décommenter si vous utilisez Azure
# AZURE_OPENAI_API_KEY=...
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_DEPLOYMENT=gpt-4

# Paramètres LLM communs
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# Workspace
WORKSPACE_PATH=./workspace
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=.js,.ts,.jsx,.tsx,.json,.md,.txt,.html,.css,.py,.sh

# WhatsApp
WHATSAPP_ENABLED=true
WHATSAPP_SESSION_PATH=./whatsapp-session
WHATSAPP_ADMIN_NUMBERS=+33612345678

# Sécurité
ENABLE_COMMAND_EXECUTION=true
ENABLE_API_CALLS=true
REQUIRE_APPROVAL_FOR_DELETE=true
REQUIRE_APPROVAL_FOR_EXEC=true
REQUIRE_APPROVAL_FOR_API=false

# Base de données
DB_PATH=./data/agent.db

# Logs
LOG_LEVEL=info
LOG_PATH=./logs/agent.log

# Performance
MAX_CONCURRENT_TASKS=3
TASK_TIMEOUT_MS=300000
ENABLE_LLM_CACHE=true
